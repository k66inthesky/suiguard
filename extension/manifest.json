{
  "manifest_version": 3,
  "name": "SUI Guard",
  "version": "0.0.0.1",
  "description": "Check if a SUI blockchain address is on the official blocklist and allow users to report suspicious addresses.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://raw.githubusercontent.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SUI Blocklist Detector"
  },
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  }
}
